void main() {
	uint64 addr = memory_allocate_units(1, 64); // Using allocate_units (calloc) to initialize the bytes to 0.
	memory_writer mw(addr, 64);
	mw.write("hello");
	memory_reader mr(addr, 64);
	alert("test", mr.read());
	mw.write(" there");
	memory_reader mr2(addr, 64);
	alert("test", mr2.read());
	memory_free(addr);
}
