set(VCPKG_TARGET_ARCHITECTURE arm64)
set(VCPKG_CRT_LINKAGE dynamic)
set(VCPKG_CMAKE_SYSTEM_NAME Darwin)
if(PORT MATCHES "libgit" OR PORT MATCHES "libplist" OR PORT MATCHES "libarchive")
	set(VCPKG_LIBRARY_LINKAGE dynamic)
else()
	set(VCPKG_LIBRARY_LINKAGE static)
endif()
if(PORT MATCHES "bass" OR PORT MATCHES "steam-audio-official")
	set(VCPKG_FIXUP_MACHO_RPATH OFF)
endif()
if(PORT MATCHES "openssl" OR PORT MATCHES "libffi")
	set(VCPKG_OSX_ARCHITECTURES arm64)
else()
	set(VCPKG_OSX_ARCHITECTURES arm64;x86_64)
endif()
if(NOT PORT MATCHES "libffi")
	set(VCPKG_CMAKE_CONFIGURE_OPTIONS_RELEASE -DCMAKE_BUILD_TYPE=MinSizeRel)
endif()
set(VCPKG_OSX_DEPLOYMENT_TARGET 14.0)
